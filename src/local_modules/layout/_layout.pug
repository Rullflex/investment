include _mixins
include _vars

doctype html
html(lang="ru")
    head
        block head
            meta(charset="utf-8")
            meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
            meta(name="format-detection" content="telephone=no")
            meta(content="ie=edge" http-equiv="x-ua-compatible")
            meta(property="og:image" content="ogimage.jpg")
            
            link(rel="stylesheet" href="assets/styles/main.min.css")

            include includes/_favicon
            include includes/_metrika
    body
        .wrapper
            block header
                include includes/_header
            block content
            block footer
                include includes/_footer
            block popup
                include includes/popups/_popup-callback
                include includes/popups/_popup-thanks
                include includes/popups/_popup-general
                include includes/popups/_popup-quiz
            block scripts
                script(src='assets/scripts/main.min.js' defer)
