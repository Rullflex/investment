- var postfixSm = '-sm'
- var postfixMd = '-md'
- var postfixLg = '-lg'
- var postfixRetina = '@r'

mixin picture-jpg(src, classList = '', alt = '', retina = true)
    if retina
        picture
            source(media=`(max-width: ${lg - 1}px)`, srcset=ipl data-srcset=`${src}${postfixSm}.webp`, type="image/webp")
            source(media=`(max-width: ${lg - 1}px)`, srcset=ipl data-srcset=`${src}${postfixSm}.jpg`, type="image/jpg")
            source(media=`(min-width: ${lg}px)`, srcset=ipl data-srcset=`${src}${postfixLg}${postfixRetina}.webp 2x, ${src}${postfixLg}.webp 1x`, type="image/webp")
            source(media=`(min-width: ${lg}px)`, srcset=ipl data-srcset=`${src}${postfixLg}${postfixRetina}.jpg 2x, ${src}${postfixLg}.jpg 1x`, type="image/jpg")
            img(src=ipl data-src=`${src}${postfixLg}.jpg` alt=alt class=`lazyload ${classList}`)
    else
        picture
            source(media=`(max-width: ${lg - 1}px)`, srcset=ipl data-srcset=`${src}${postfixSm}.webp`, type="image/webp")
            source(media=`(max-width: ${lg - 1}px)`, srcset=ipl data-srcset=`${src}${postfixSm}.jpg`, type="image/jpg")
            source(media=`(min-width: ${lg}px)`, srcset=ipl data-srcset=`${src}${postfixLg}.webp`, type="image/webp")
            source(media=`(min-width: ${lg}px)`, srcset=ipl data-srcset=`${src}${postfixLg}.jpg`, type="image/jpg")
            img(src=ipl data-src=`${src}${postfixLg}.jpg` alt=alt class=`lazyload ${classList}`)

