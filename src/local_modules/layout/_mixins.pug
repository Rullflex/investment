mixin slider-dots()
    ul.uk-slider-nav.uk-dotnav.slidedots

mixin slider-nav()
    a.slidenav.slidenav-prev(href="#" data-uk-slider-item="previous")!= iconset.angleleft
    a.slidenav.slidenav-next(href="#" data-uk-slider-item="next")!= iconset.angleright